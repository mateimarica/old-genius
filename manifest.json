{
	"author": "mateimarica.dev@gmail.com",
	"manifest_version": 3,
	"name": "Old Genius (Song Page Switcher)",
	"short_name": "Old Genius",
	"version": "1.0",
	"description": "Switch between Genius's redesign and the old song page.",
	"minimum_chrome_version": "101",
	"content_security_policy": {
		"extension_pages": "default-src 'self'; frame-ancestors 'none';"
	},
	"action": {
		"default_popup": "popup/popup.html"
	},
	"icons": {
		"16": "icons/icon_16.png",
		"32": "icons/icon_32.png",
		"48": "icons/icon_48.png",
		"128": "icons/icon_128.png"
	},
	"content_scripts": [
		{
			"js": [
				"scripts/content.js"
			],
			"matches": [
				"*://genius.com/*"
			]
		}
	],
	"background": {
		"service_worker": "scripts/background.mjs",
		"type": "module"
	},
	"permissions": [
		"declarativeNetRequest",
		"storage"
	],
	"host_permissions": [
		"*://genius.com/*"
	],
	"web_accessible_resources": [
		{
			"resources": ["scripts/regex.mjs"],
			"matches": ["*://genius.com/*"]
		}
	]
}